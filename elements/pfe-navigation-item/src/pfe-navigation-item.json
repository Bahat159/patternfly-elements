{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Navigation item",
    "description": "This element renders....",
    "type": "object",
    "tag": "pfe-navigation-item",
    "class": "pfe-navigation-item",
    "category": "container",
    "properties": {
      "slots": {
        "title": "Slots",
        "description": "Definition of the supported slots",
        "type": "object",
        "properties": {
          "skip-links": {
            "title": "Skip navigation",
            "type": "array",
            "namedSlot": true,
            "items": {
              "oneOf": [
                {
                  "$ref": "raw"
                }
              ]
            }
          },
          "logo": {
            "title": "Logo",
            "type": "array",
            "namedSlot": true,
            "items": {
              "oneOf": [
                {
                  "$ref": "raw"
                }
              ]
            }
          },
          "main": {
            "title": "Main navigation",
            "type": "array",
            "namedSlot": true,
            "items": {
              "oneOf": [
                {
                  "$ref": "raw"
                }
              ]
            }
          },
          "utility": {
            "title": "Utility navigation",
            "type": "array",
            "namedSlot": true,
            "items": {
              "oneOf": [
                {
                  "$ref": "raw"
                }
              ]
            }
          }
        }
      },
      "attributes": {
        "title": "Attributes",
        "type": "object",
        "properties": {
          "icon": {
            "title": "Icon",
            "type": "string",
            "observed": "_updateIcon"
          },
          "mobile-position": {
            "title": "Position of element on mobile",
            "type": "string",
            "enum": [
              "top",
              "bottom"
            ],
            "options": {
              "dependencies": [
                {
                  "type": "slot",
                  "id": "utility"
                }
              ]
            },
            "observed": "_moveElement"
          }
        }
      }
    },
    "required": ["slots", "attributes"],
    "additionalProperties": false
  }
  