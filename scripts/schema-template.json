{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "<%= tagName %>",
  "description": "<%= declaration.jsDoc.comment %>",
  "type": "object",
  "tag": "<%= tagName %>",
  "class": "<%= declaration.tagName %>",
  "category": "container",
  "properties": {
    "slots": {
      "title": "Slots",
      "description": "Definition of the supported slots",
      "type": "object",
      "properties": {
        <% declaration.slots.forEach((slot,i,slots) => { %>
          "<%= slot.name || "default" %>": {
            "title": "<%= slot.name || "default" %>",
            "description": "<%= slot.jsDoc.comment %>",
            "type": "array",
            "namedSlot": <%= !!slot.name %>
          }<%= (i < slots.length - 1) ? "," : "" %>
        <% }); %>
      }
    },
    "attributes": {
      "title": "Attributes",
      "type": "object",
      "properties": {
        <% _.filter(declaration.members, { kind: "attribute" }).forEach(attr => { %>
          "<%= attr.attrName %>": {
            "title": "<%= attr.attrName %>",
            "type": "string",
            <% if (attr.type.kind === "UNION") { %>
            "enum": [
              <% attr.type.types.forEach((type, i, types) => { %>
                "<%= type.value %>"<%= (i < types.length - 1) ? "," : "" %>
              <% }); %>
            ],<% } %>
            "prefixed": true
          },
        <% }); %>
        "class": {
          "title": "PFElement class",
          "type": "string",
          "default": "PFElement",
          "prefixed": false
        }
      }
    }
  },
  "required": ["slots", "attributes"],
  "additionalProperties": false
}
